{
  "name": "twitter-streaming-aggregator",
  "version": "0.0.1",
  "description": "Digest Twitter feed into meaningful data",
  "main": "index.js",
  "scripts": {
    "lint": "standard --fix --verbose",
    "mocha": "mocha",
    "mocha:watch": "$(npm bin)/nodemon --exec \"mocha || exit 1\"",
    "cover": "istanbul cover _mocha",
    "test": "yarn run lint && yarn run cover"
  },
  "author": "Kent Safranski <fluidbyte>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.5.0",
    "emoji-regex": "^6.5.1",
    "express": "^4.16.1",
    "request": "^2.83.0",
    "require-dir": "^0.3.2",
    "socket.io": "^2.0.3",
    "url-unshort": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "dirty-chai": "^2.0.1",
    "istanbul": "^0.4.5",
    "jspm": "^0.16.53",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.13.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "ignore": [
      "coverage"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "sinon",
      "proxyquire",
      "sandbox",
      "xit"
    ]
  },
  "jspm": {
    "directories": {
      "packages": "client/jspm_packages"
    },
    "configFile": "client/config.js",
    "dependencies": {
      "react": "npm:react@^16.0.0",
      "react-bootstrap": "npm:react-bootstrap@^0.31.3",
      "react-dom": "npm:react-dom@^16.0.0",
      "socket.io-client": "npm:socket.io-client@^2.0.3"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  }
}
