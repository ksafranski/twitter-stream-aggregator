    "url-unshort": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "dirty-chai": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "sinon": "^4.0.0",
    "sinon-chai": "^2.13.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "ignore": [
